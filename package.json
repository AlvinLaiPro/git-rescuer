{
  "name": "@alvinlai/git-rescuer",
  "version": "1.0.0",
  "description": "A tool to help you compare and create merge requests for multiple repositories",
  "type": "module",
  "files": [
    "lib/**/*",
    "bin/**/*"
  ],
  "bin": {
    "git-rescuer": "./bin/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf ./lib/",
    "lint": "eslint ./src/ --fix",
    "start": "TS_NODE_FILES=true ts-node --esm ./src/cli.ts",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlvinLaiPro/git-rescuer.git"
  },
  "license": "MIT",
  "author": {
    "name": "Alvin Lai",
    "email": "alvinlai@aliyun.com",
    "url": "https://github.com/AlvinLaiPro"
  },
  "keywords": [
    "git",
    "rescue",
    "compare",
    "merge"
  ],
  "bugs": {
    "url": "https://github.com/AlvinLaiPro/git-rescuer/issues"
  },
  "homepage": "https://github.com/AlvinLaiPro/git-rescuer#readme",
  "dependencies": {
    "commander": "12.0.0",
    "node-fetch": "2.7.0",
    "open": "10.1.0",
    "ts-node": "10.9.1"
  },
  "devDependencies": {
    "@types/jest": "29.1.2",
    "@types/node": "18.7.14",
    "@types/node-fetch": "2.6.9",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "execa": "5.1.1",
    "husky": "6.0.0",
    "jest": "29.1.2",
    "lint-staged": "13.2.1",
    "prettier": "3.2.5",
    "ts-jest": "29.1.2",
    "typescript": "5.4.5"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  }
}
